{
  "name": "sandman-scripts",
  "version": "0.1.0",
  "description": "A collection of scripts for use with Sandman",
  "keywords": [
    "webhooks",
    "sandman"
  ],
  "license": "MIT",
  "author": "Daniel Sieradski <daniel@self.agency>",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "node-gyp": "^11.0.0",
    "pocketbase": "^0.25.1",
    "puppeteer": "^24.2.0",
    "radashi": "^12.5.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.5",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-perfectionist": "^4.3.0",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "tsup": {
    "cjsInterop": true,
    "clean": true,
    "dts": false,
    "entry": [
      "src/*.ts"
    ],
    "format": [
      "esm"
    ],
    "minify": true,
    "sourcemap": "inline",
    "splitting": false
  },
  "engines": {
    "node": ">=20.6.0"
  }
}
